
<div class="list">
    <h2 style="margin:0 auto; margin-bottom: 1rem;">Список животных</h2>
    <% lists.map(item => {%>
    <form action="/update/:id" class="form" method="post" role="form">
        <input type="text" placeholder="Кличка" name="name" value="<%= item.data.name %>">
        <input type="text" name="subname" value="<%= item.data.subname %>">
        <input type="text" name="types" value="<%= item.data.type %>">

        <button class="btn" style="margin-left: 5px;" type="submit">edit</button>
        <a class="btn" style="margin-left: 5px;" href="delete/<%= item.id %>">del</a>
    </form>
    <% }) %>
</div>
